@model HospitalMVC.Models.DoctorPatient
@{
    ViewBag.Title = "InsertNewPatient";
}

<h2>Insert new patient for the doctor @Model.doctor.Name</h2>

@using (Html.BeginForm("InsertNewPatient", "Doctors"))
{
    <div class="form-group">
        @*@Html.DropDownListFor(m => m.PatientId, new SelectList(Model.patients, "Id", "Name"), new { @class = "form-control" })*@
        @Html.DropDownListFor(m => m.PatientId, new SelectList(Model.patients, "Id", "Name"), "Select a patient", new { @class = "form-control" })


        @Html.HiddenFor(m => m.DoctorId)

    </div>

    <div class="form-group">

        <button type="submit" class="btn btn-default">Add a new patient</button>

    </div>



}

